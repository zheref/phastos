{
	"name": "phastos",
	"version": "1.0.0",
	"description": "A command-line tool for Phastos",
	"exports": "./main.ts",
	"bin": {
		"phastos": "./main.ts"
	},
	"tasks": {
		"dev": "deno run --allow-env --allow-read --allow-run --watch main.ts",
		"install": "deno install --allow-env --allow-read --allow-run --global --name phastos main.ts -f",
		"uninstall": "deno uninstall phastos",
		"test": "deno test --allow-env --allow-read --allow-run",
		"test:fast": "deno test --allow-env --allow-read --allow-run --no-check",
		"test:watch": "deno test --allow-env --allow-read --allow-run --watch",
		"lint": "deno lint",
		"fmt": "deno fmt",
		"fmt:check": "deno fmt --check"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1"
	},
	"compilerOptions": {
		"jsx": "react"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"semiColons": false,
		"singleQuote": true,
		"proseWrap": "preserve",
		"useTabs": true,
		"indentWidth": 4,
		"lineWidth": 80
	}
}
