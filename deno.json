{
  "name": "phastos",
  "version": "1.0.0",
  "description": "A command-line tool for Phastos",
  "exports": "./main.ts",
  "bin": {
    "phastos": "./main.ts"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "install": "deno install --allow-env --global --name phastos main.ts",
    "uninstall": "deno uninstall phastos"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  }
}
